@model deneme_mvccore.Models.Security.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
    <h3>Login</h3>
    <form asp-controller="Security" asp-action="Login" method="post">
        <div asp-validation-summary="All"></div>
        <input type="text" asp-for="UserName" placeholder="UserName" /> <br />
        <input type="password" asp-for="Password" placeholder="Password" /> <br />
        <input type="submit"  value="Giriş"/>

    </form>
</body>
</html>
